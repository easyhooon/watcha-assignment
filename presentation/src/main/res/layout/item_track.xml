<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="8dp">

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/iv_artwork"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_margin="8dp"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearance="@style/ShapeAppearance.SmallComponent"
    tools:src="@tools:sample/avatars" />

  <TextView
    android:id="@+id/tv_track_name"
    style="@style/H5"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="16dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:textColor="@color/gray_900"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/iv_artwork"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="TrackName" />


  <TextView
    android:id="@+id/tv_collection_name"
    style="@style/TextLMedium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:textColor="@color/gray_900"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/iv_artwork"
    app:layout_constraintTop_toBottomOf="@id/tv_track_name"
    tools:text="collectionName" />

  <TextView
    android:id="@+id/tv_artiest_name"
    style="@style/TextXsRegular"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textColor="@color/gray_900"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/iv_artwork"
    app:layout_constraintTop_toBottomOf="@id/tv_collection_name"
    tools:text="artistName" />

</androidx.constraintlayout.widget.ConstraintLayout>


